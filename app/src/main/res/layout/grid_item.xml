        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="8px"
        android:ems="10"
        android:hint="tag"
        android:inputType="textPersonName" />
</LinearLayout>