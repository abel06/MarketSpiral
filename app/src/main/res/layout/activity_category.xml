<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abela.marketspiral.Activities.CategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            style="@style/text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/villaBtn"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/villa" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#a6000000"
                android:text="Villa"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </FrameLayout>

        <FrameLayout
            style="@style/text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/residentialBtn"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/residential" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#a6000000"
                android:text="Residential"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </FrameLayout>

        <FrameLayout
            style="@style/text_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp">

            <ImageView
                android:id="@+id/commercialBtn"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/commercial" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#a6000000"
                android:text="Commercial"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
